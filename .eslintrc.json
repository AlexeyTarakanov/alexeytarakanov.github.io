{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "curly": [
          2,
          "all"
        ],
        "keyword-spacing": [
          2,
          {}
        ],
        "space-before-blocks": [
          2,
          "always"
        ],
        "wrap-iife": 2,
        "space-before-function-paren": [
          2,
          "always"
        ],
        "one-var": [
          2,
          "never"
        ],
        "vars-on-top": 2,
        "no-empty": [
          2,
          {
            "allowEmptyCatch": true
          }
        ],
        "array-bracket-spacing": [
          2,
          "never",
          {}
        ],
        "space-in-parens": [
          2,
          "never"
        ],
        "comma-style": [
          2,
          "last"
        ],
        "no-with": 2,
        "indent": [
          2,
          4,
          {
            "SwitchCase": 1
          }
        ],
        "no-mixed-spaces-and-tabs": 2,
        "no-trailing-spaces": 2,
        "comma-dangle": [
          2,
          "never"
        ],
        "brace-style": [
          2,
          "1tbs",
          {
            "allowSingleLine": true
          }
        ],
        "eol-last": 2,
        "no-multi-str": 2,
        "key-spacing": [
          2,
          {
            "afterColon": true
          }
        ],
        "newline-after-var": [
          2,
          "always"
        ],
        "semi": [
          2,
          "always"
        ],
        "max-len": [
          2,
          120
        ],
        "no-multi-spaces": 2,
        "no-multiple-empty-lines": 2,
        "operator-linebreak": [
          2,
          "after"
        ],
        "space-infix-ops": 2,
        "space-unary-ops": [
          2,
          {
            "words": false,
            "nonwords": false
          }
        ],
        "quotes": [
          2,
          "single"
        ],
        "eqeqeq": ["error", "always"],
        "prefer-const": ["error", {
          "destructuring": "any",
          "ignoreReadBeforeAssign": false
        }]
    }
}